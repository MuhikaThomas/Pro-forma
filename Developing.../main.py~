import kivy

from kivy.app import App
from kivy.uix.tabbedpanel import TabbedPanel
from kivy.uix.tabbedpanel import TabbedPanelHeader
from kivy.uix.label import Label
from kivy.uix.textinput import TextInput
from kivy.uix.scrollview import ScrollView
from kivy.lang import Builder
	
class Tabs(TabbedPanel):
	def build(self, **kwargs):
		tp_panel = TabbedPanel()
		
		th_tab1 = TabbedPanelHeader(text='Pro-Forma')
		th_tab1.content = Label(id = name_lbl, text = 'Property Name')
		th_tab1.content = TextInput(id = name_ti, focus =True, multiline = False)
		
		tp_panel.add_widget(th_tab1)
		return tp_panel

class Estate(App):
	def build(self):
		return Tabs()

if __name__ == '__main__':
	Estate().run()
